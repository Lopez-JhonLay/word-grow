generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  wordResponses WordResponse[]
  dailyUserWords DailyUserWords[]
}

model DailyUserWords {
  id        String   @id @default(cuid())
  word1     String
  word2     String
  word3     String

  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to User
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model WordResponse {
  id         String   @id @default(cuid())
  definition String
  word       String
  sentence   String
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relation to user
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([word])
}